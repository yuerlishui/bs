<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbf6ed"
    tools:context="com.yukunlin.ykl.activity.WelcomeActivity">

    <RelativeLayout
        android:id="@+id/topLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-70dp">

        <RelativeLayout

            android:id="@+id/gifLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="250dp"
                android:layout_height="305dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/welcome_new_bg" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/anim"
                android:layout_width="196dp"
                android:layout_height="236dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:src="@drawable/welcome_new"

                />

        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gifLay"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/welcome_02" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:alpha=".8"
        android:background="#ccffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:alpha=".8"
            android:background="@drawable/bg_welcome_login"
            android:gravity="center"
            android:text="登录"
            android:textColor="#111111"
            android:textSize="@dimen/textSize_large" />

        <TextView
            android:id="@+id/register"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="35dp"
            android:layout_weight="1"
            android:alpha=".8"
            android:background="@drawable/bg_welcome_login"
            android:gravity="center"
            android:text="注册"
            android:textColor="#111111"
            android:textSize="@dimen/textSize_large" />

    </LinearLayout>

</RelativeLayout>
